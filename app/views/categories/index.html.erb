<h1>Categorie di libri</h1>

<table border="1">

  <thead>
    <tr>
      <th>ID</th>
      <th>Categoria</th>
    </tr>
  </thead>
  <tbody>

  <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.category %></td>
        <td><%= button_to '-', category, method: :delete %></td>
      </tr>
  <% end %>


  <tr>
    <%= form_for :category, url: {action: 'create'} do |f| %>
    <td>
      &nbsp;
    </td>
    <td>
      <%= f.text_field :category %>
    </td>
    <td>
      <%= f.submit('+') %>
    </td>
    <% end %>
  </tr>
  </tbody>


</table>




<p>
  <a href="/">Home</a>
</p>