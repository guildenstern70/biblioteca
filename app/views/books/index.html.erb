<h1>Catalogo libri</h1>

<table border="1">
  <tr>
    <th>Autore</th>
    <th>Titolo</th>
  </tr>

  <% @books.each do |book| %>
      <tr>
        <td><%= book.author %></td>
        <td><a href="/books/<%= book.id %>"><%= book.title %></a></td>
        <td>
          <% if book.available_for_rent? %>
              <button onclick="javascript:location.href='books/<%= book.id %>/edit'">Prestito</button>
          <% else %>
              <i>In prestito</i>
          <% end %>
        </td>
      </tr>
  <% end %>
</table>

<p>
  <a href="/books/new">Aggiungi un libro al catalogo</a>
</p>