<h1>Inserimento nuovo libro</h1>

<%= form_for :book, url: books_path do |f| %>
  <p>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </p>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_area :title %>
  </p>
  
  <p>
    <%= f.label :isbn %><br>
    <%= f.text_field :isbn %>
  </p>
 
  <p>
    <%= f.label :publisher %><br>
    <%= f.text_area :publisher %>
  </p>
  
    <p>
    <%= f.label :year %><br>
    <%= f.text_area :year %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>


