<h1>Inserimento nuovo libro</h1>
<%= form_for :book, url: {action: 'create'} do |f| %>
    <p>
      <%= f.label :author %><br>
      <%= f.text_field :author %>
    </p>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :isbn %><br>
      <%= f.text_field :isbn %>
    </p>
    <p>
      <%= f.label :publisher %><br>
      <%= f.text_field :publisher %>
    </p>
    <p>
      <%= f.label :year %><br>
      <%= f.text_field :year %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>
<a href="/">Home</a>
